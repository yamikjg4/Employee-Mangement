@model IEnumerable<Employee_Mangement.Models.JoinModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" asp-controller="emp" method="post" class="col-sm-12 col-lg-5 col-xl-5 ml-1 my-2 mt-lg-0 vw-100">
    <div class=" input-group-text text-primary bg-white" style="border-radius:30px;">
        @*<div class="">*@
        <input type="text" id="search2" name="search" placeholder="Search for Employee Name" style="padding: 0 16px; border-radius: 2px 0 0 2px; border: 0; outline: 0 none; font-size: 14px; height: 36px; width: 100%;" />
        <div>
            <input type="hidden" id="hfcustom" name="Product_name" />
        </div>
        <button type="submit" style="justify-content: flex-end; border: 0; outline:0 none; background-color: white; height: 36px; width: 44px; border-radius: 2px; cursor: pointer; padding: 4px 12px 0 8px; ">
            <svg width="20" height="20" viewBox="0 0 17 18" class="" xmlns="http://www.w3.org/2000/svg"><g fill="#000000" fill-rule="evenodd"><path class="_34RNph" d="m11.618 9.897l4.225 4.212c.092.092.101.232.02.313l-1.465 1.46c-.081.081-.221.072-.314-.02l-4.216-4.203"></path><path class="_34RNph" d="m6.486 10.901c-2.42 0-4.381-1.956-4.381-4.368 0-2.413 1.961-4.369 4.381-4.369 2.42 0 4.381 1.956 4.381 4.369 0 2.413-1.961 4.368-4.381 4.368m0-10.835c-3.582 0-6.486 2.895-6.486 6.467 0 3.572 2.904 6.467 6.486 6.467 3.582 0 6.486-2.895 6.486-6.467 0-3.572-2.904-6.467-6.486-6.467"></path></g></svg>
        </button>
    </div>
</form>
<p>
    <a asp-action="AddEdit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.employeeid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.employeename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.designationname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.salary)
            </th>


        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @* @Html.ActionLink("Edit", "AddEdit", new { id = item.employeeid }) |*@
                    <a asp-action="AddEdit" asp-route-id="@item.employeeid">Edit</a> ||
                    <a asp-action="Delete" asp-route-id="@item.employeeid" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employeeid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employeename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.designationname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.salary)
                </td>


            </tr>
        }
    </tbody>
</table>
@if (ViewBag.Message != null)
{
    @ViewBag.Message
}